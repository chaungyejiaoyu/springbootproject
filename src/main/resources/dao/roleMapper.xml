<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.bdqn.springbootproject.dao.RoleDao">
    <select id="findAllRole" resultType="Role">
        SELECT * FROM smbms_role
    </select>
    <update id="updateRole">
        update smbms_role
        <set>
            roleName=#{roleName},
            modifyDate=#{modifyDate}
            <where>
                id=#{id}
            </where>
        </set>
    </update>
    <update id="updateRole1" parameterType="Role">
        update smbms_role
        <set>
            roleName=#{roleName},
            modifyDate=#{modifyDate}
            <where>
                id=#{id}
            </where>
        </set>
    </update>
    <select id="findRole" parameterType="int" resultType="Role">
        select * from smbms_role
        <where>
            id=#{id}
        </where>
    </select>

    <select id="findRoleCount" resultType="int" parameterType="String">
        select count(1) from smbms_role
        <where>
            <if test="roleName!=null and roleName!=''">
                roleName like CONCAT("%",#{roleName},"%")
            </if>
        </where>
    </select>
    <select id="findRolePaging" resultType="Role">
        select * from smbms_role
        <where>
            <if test="roleName!=null and roleName!=''">
                roleName like CONCAT("%",#{roleName},"%")
            </if>
        </where>
        limit #{from},#{pageSize}
    </select>
</mapper>